{
  "name": "electron-app",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "gen:icons": "node scripts/generate-icons.mjs",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.primepick.app",
    "productName": "Prime Pick",
    "directories": {
      "buildResources": "build",
      "output": "release2"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "public/**",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist/photo_selector_engine.exe",
        "to": "engine/photo_selector_engine.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "extraResources": [
        {
          "from": "../dist/photo_selector_engine",
          "to": "engine/photo_selector_engine"
        }
      ]
    }
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "png-to-ico": "^3.0.1",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^6.2.2",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5",
    "tailwind-merge": "^3.4.0",
    "use-sync-external-store": "^1.6.0",
    "zustand": "^5.0.10"
  }
}
